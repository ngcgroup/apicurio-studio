<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>io.apicurio</groupId>
        <artifactId>apicurio-studio-platforms</artifactId>
        <version>0.2.55-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    <artifactId>apicurio-studio-platforms-thorntail</artifactId>
    <packaging>pom</packaging>
    <name>apicurio-studio-platforms-thorntail</name>
    <modules>
        <module>api</module>
        <module>ui</module>
        <module>ws</module>
    </modules>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-deploy-plugin</artifactId>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
            <plugin>
                <groupId>io.fabric8</groupId>
                <artifactId>docker-maven-plugin</artifactId>
                <version>0.39.1</version>
                <configuration>
                  <images>
                    <image>
                      <name>apicurio/${project.build.finalName}</name>
                      <build>
                        <dockerFile>${project.basedir}/Dockerfile</dockerFile>                        
                        </build>
                    </image>
                  </images>

                </configuration>
            </plugin>
        </plugins>

    </build>
</project>
